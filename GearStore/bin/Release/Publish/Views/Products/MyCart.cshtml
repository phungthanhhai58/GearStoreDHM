@model GearStore.Models.CartViewModel

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].PhotoFilePatch)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].Manufacturer.ManufacturerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].Category.Menu.MenuName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items[0].Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Items)
    {
        <tr>
            <td>
                <img class="img-rounded" style="width:150px" src="~/images/products/@item.PhotoFilePatch" alt="@item.ProductName" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer.ManufacturerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Menu.MenuName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td></td>
        </tr>
    }
</table>
<table>
    <tr><th>Subtotal</th><td>@Html.DisplayFor(model => Model.Subtotal) VNĐ</td></tr>
    <tr><th>Shipping</th><td>@Html.DisplayFor(model => Model.Shipping) VNĐ</td></tr>
    <tr><th>Tax</th><td>@Html.DisplayFor(model => Model.Tax) VNĐ</td></tr>
    <tr><th>Total</th><td>@Html.DisplayFor(model => Model.Total) VNĐ</td></tr>
</table>
