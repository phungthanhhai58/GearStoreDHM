@{
    var account = Request.Cookies["Account"];
}
@if (account == null)
{
    <li><a href="@Url.Action("SignIn","Account",new { returnUrl = ViewContext.HttpContext.Request.Url.PathAndQuery })">Đăng nhập</a></li>
    <li><a href="@Url.Action("SignUp","Account")">Đăng kí</a></li>
}
else
{
    <li><a href="@Url.Action("Details","Account",new { id = account["ID"]})">@account["Username"]</a></li>
    <li><a href="@Url.Action("SignOut","Account")">Đăng xuất</a></li>
}
<li><a href="#">Đơn hàng</a></li>
