@model IEnumerable<GearStore.Models.Menu>

@foreach (var item in Model)
{
    <li class="mobile-links__item" data-collapse-item>
        <div class="mobile-links__item-title">
            <a href="@Url.Action("Index","Products",new { menu = item.MenuID})" class="mobile-links__item-link">@item.MenuName</a>
            <button class="mobile-links__item-toggle" type="button" data-collapse-trigger>
                <svg class="mobile-links__item-arrow" width="12px" height="7px">
                    <use xlink:href="~/images/sprite.svg#arrow-rounded-down-12x7"></use>
                </svg>
            </button>
        </div>
        <div class="mobile-links__item-sub-links" data-collapse-content>
            <ul class="mobile-links mobile-links--level--2">
                @foreach (var itemC in item.Categories)
                {
                    <li class="mobile-links__item" data-collapse-item>
                        <div class="mobile-links__item-title">
                            <a href="@Url.Action("Index","Products",new { category = itemC.CategoryID})" class="mobile-links__item-link">@itemC.CategoryName</a>
                        </div>
                    </li>
                }
            </ul>
        </div>
    </li>
}