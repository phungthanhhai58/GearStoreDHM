@model IEnumerable<GearStore.Models.Product>

@{
    ViewBag.Title = "List";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-primary">
                <h3 class="card-title">Danh sách sản phẩm</h3>
            </div>
            <div class="card-body">
                <a class="btn btn-success" href="@Url.Action("Create")">
                    Tạo mới sản phẩm
                </a>
                <div class="table-responsive">
                    <table class="table">
                        <thead class=" text-primary">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.PhotoFilePatch)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ProductName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Price)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UnitsInStock)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UpdatedDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ReorderLevel)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Rating)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Discontinued)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Details)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Category.CategoryName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Manufacturer.ManufacturerName)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/images/products/@item.PhotoFilePatch" style="width:120px" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProductName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UnitsInStock)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UpdatedDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ReorderLevel)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Rating)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Discontinued)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Details)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Category.CategoryName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Manufacturer.ManufacturerName)
                                    </td>
                                    <td class="td-actions text-right">
                                        <a href="@Url.Action("Details", new { id = item.ProductID })" rel="tooltip" data-placement="left" title="Chi tiết" class="btn btn-info btn-simple">
                                            <i class="material-icons">description</i>
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = item.ProductID })" rel="tooltip" data-placement="left" title="Sửa" class="btn btn-success btn-simple">
                                            <i class="material-icons">edit</i>
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = item.ProductID })" rel="tooltip" data-placement="left" title="Xóa" class="btn btn-danger btn-simple">
                                            <i class="material-icons">close</i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            @{
                                var maxPage = ViewBag.MaxPage;
                                var nowPage = ViewBag.NowPage;
                                var n = 5;
                                if (nowPage > 1)
                                {
                                    <li class="page-item"><a class="page-link" href="@Url.Action("Index",new { page = (nowPage - 1) })">Previous</a></li>
                                }
                                else
                                {
                                    <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                                }
                                for (int i = nowPage - n; i <= nowPage + n; i++)
                                {
                                    if (i < 1)
                                    {
                                        continue;
                                    }
                                    else if (i > maxPage)
                                    {
                                        break;
                                    }
                                    else if (i == nowPage)
                                    {
                                        <li class="page-item active"><a class="page-link" href="@Url.Action("Index",new { page = i })">@i</a></li>
                                    }
                                    else
                                    {
                                        <li class="page-item"><a class="page-link" href="@Url.Action("Index",new { page = i })">@i</a></li>
                                    }
                                }
                                if (nowPage < maxPage)
                                {
                                    <li class="page-item"><a class="page-link" href="@Url.Action("Index",new { page = (nowPage + 1) })">Next</a></li>
                                }
                                else
                                {
                                    <li class="page-item disabled"><a class="page-link" href="#">Next</a></li>
                                }
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

